<p id="notice"><%= notice %></p>

<h1>Listing Meetings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td></br>
        <td><%= meeting.start_time %></td>
        <td><%= meeting.end_time %></td>
        <td><%= link_to 'Show', meeting,class: "btn btn-sm btn-success" %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting),class: "btn btn-sm btn-info"%></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, class: "btn btn-sm btn-danger",data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %> 
  </tbody>
</table>

<br>

<%= link_to 'New Meeting', new_meeting_path,class: "btn btn-md btn-primary" %></button>
